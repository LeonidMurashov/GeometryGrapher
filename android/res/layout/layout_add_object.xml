<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/coordA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="A"
        android:inputType="number"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/coordB"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/coordB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="B"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/coordA"
        app:layout_constraintRight_toLeftOf="@+id/coordC"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/coordC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="C"

        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/coordB"
        app:layout_constraintRight_toLeftOf="@+id/coordD"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/coordD"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="D"


        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/coordC"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>